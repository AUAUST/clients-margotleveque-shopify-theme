<!--Header-->
<header>
  {% include 'menu' %}
  <!--Contact-->
  <p class="contact-links">
    {% unless page.handle == 'faq' -%}
      {% for link in linklists.footer.links -%}
        <a
          href="{{ link.url }}"
          target="_blank"
          rel="noreferrer">
          {{ link.title }}
        </a><br>
      {%- endfor %}
    {% endunless %}
  </p>
</header>

{% assign hasBanner = false %}

{% if page.handle == 'trials-students' or page.handle == 'trial-fonts-pack' -%}
  {% assign hasBanner = true %}
{% endif %}

{% if hasBanner %}
  {% section 'text-banner' %}
{% endif %}

<!--Content-->
<div id="content" class="{%  if hasBanner %}has-banner{%endif%}">
  {% if page.handle == 'trials-students' or page.handle == 'trial-fonts-pack' -%}
    {% section 'page-trials' %}
  {%- elsif page.handle == 'custom' -%}
    {% section 'page-custom' %}
  {%- elsif page.handle == 'licenses' -%}
    {% section 'page-licensing' %}
  {%- elsif page.handle == 'terms' -%}
    {% section 'page-terms' %}
  {%- elsif page.handle == 'faq' -%}
    {% section 'page-faq' %}
  {%- else -%}
    <wrap>
      {{ page.content | replace: '<a', '|a' | replace: '</a>', '|/a|' | replace: '</p>', '|br' | strip_html | replace: '|br', '<br>' | replace: '|a', '<a' | replace: '|/a|', '</a>' }}
    </wrap>
  {%- endif %}
</div>